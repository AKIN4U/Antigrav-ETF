# Database Connection
# Connect to Supabase via connection pooling with Supavisor.
DATABASE_URL="postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres"

# Direct connection to the database. Used for migrations.
DIRECT_URL="postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase API Configuration
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# Email Service (Resend)
RESEND_API_KEY="re_[YOUR_API_KEY]"
ADMIN_EMAIL="admin@example.com"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
